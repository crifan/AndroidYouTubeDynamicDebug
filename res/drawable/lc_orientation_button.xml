<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/lc_button_ripple_material_dark_color"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/lc_button_style_orientation_background_selected" />
                    <corners android:radius="@dimen/lc_button_corner_radius" />
                </shape>
            </item>
            <item android:state_activated="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/lc_button_style_orientation_background_selected" />
                    <corners android:radius="@dimen/lc_button_corner_radius" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/lc_button_style_orientation_background" />
                    <corners android:radius="@dimen/lc_button_corner_radius" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>