<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/lc_button_ripple_material_dark_color"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/lc_button_corner_radius" />
            <solid android:color="@color/yt_white1" />
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/lc_button_corner_radius" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/screencast_control_go_live_button_color" />
                    <corners android:radius="@dimen/lc_button_corner_radius" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>